<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style cho EditText -->
    <style name="AppEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/mainColor</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Style cho TextInputLayout (OutlinedBox) với bo góc 16dp -->
    <style name="AppTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/mainColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColorHint">@color/gray</item>
        <!-- Bo góc viền OutlinedBox -->
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

</resources>
