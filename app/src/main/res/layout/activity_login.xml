<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/inter_bold"
            android:text="Sign In"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter"
            android:text="Hi! Well comback to Building Manager"
            android:textColor="@color/md_theme_outline"
            android:textSize="13sp" />


        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inter_medium"
            android:text="Email"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeColor="#0A305F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEmail"
                android:paddingStart="25dp"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your email here."
                android:textColorHint="#9675796C"

                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeColor="#0A305F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:hintEnabled="false"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPassword"
                android:paddingStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password here."
                android:inputType="textPassword"
                android:textColorHint="#9675796C"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/inter_medium"
                android:id="@+id/txtForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget password ?"
                android:textSize="14sp"
                android:textColor="#0A305F"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"/>
            <View
                android:layout_below="@id/txtForgotPassword"
                android:layout_width="115dp"
                android:layout_height="1dp"
                android:background="@color/md_theme_onPrimaryContainer" />

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkboxUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"/>
            <CheckBox
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@id/checkboxUser"
                android:id="@+id/checkboxAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"/>
        </RelativeLayout>
        <Button
            android:backgroundTint="#0A305F"
            android:id="@+id/btnSignIn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Sign In"
            android:textSize="20sp"/>
        <RelativeLayout

            android:layout_marginTop="40dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_centerVertical="true"
                android:id="@+id/cbAgreeWith"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_centerVertical="true"

                android:layout_toRightOf="@id/cbAgreeWith"
                android:id="@+id/txtAgreeWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agree with  "
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="end"/>
            <TextView
                android:layout_centerVertical="true"

                android:layout_toRightOf="@id/txtAgreeWith"
                android:id="@+id/txtTermAndCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Terms &amp; Condition"
                android:textSize="15sp"
                android:textColor="#0A305F"
                android:layout_gravity="end"/>
            <View
                android:layout_below="@id/txtTermAndCondition"
                android:layout_toRightOf="@id/txtTermAndCondition"
                android:layout_toLeftOf="@id/txtTermAndCondition"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#0A305F" />

        </RelativeLayout>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>